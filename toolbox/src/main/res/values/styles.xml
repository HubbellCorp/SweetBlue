<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@string/default_font_family</item>
        <item name="actionBarPopupTheme">@style/TopOverflowMenuBackground</item>
        <item name="actionMenuTextColor">@color/item_title_blue</item>
        <item name="android:actionMenuTextColor">@color/item_title_blue</item>
        <item name="colorAccent">@color/header_gray</item>
    </style>


    <!-- Overflow Menu background  -->
    <style name="TopOverflowMenuBackground" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/primary_gray</item>
        <item name="colorAccent">@color/overflow_enabled_blue</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <!-- PAGE TITLE BAR -->
    <style name="page_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/title_bar_blue</item>
    </style>

    <style name="page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <!-- ITEM -->
    <style name="item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primary_gray</item>
        <!-- TODO? Right and left padding?-->
    </style>

    <style name="item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/tiny</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/item_title_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_title_large" parent="item_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="item_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tiny</item>
        <item name="android:layout_marginBottom">@dimen/tiniest</item>
        <item name="android:textColor">@color/header_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/tiny</item>
        <item name="android:lineSpacingMultiplier">.9</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_gray</item>
    </style>

    <style name="item_text.no_spacing">
        <item name="android:layout_margin">0dp</item>
    </style>


    <!-- NAVBAR -->
    <style name="nav_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="nav_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/medium</item>
        <item name="android:textColor">@color/nav_bar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- TABS -->
    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/page_title_disabled</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@color/title_bar_blue</item>
        <item name="tabTextColor">@color/page_title_disabled</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/page_title_disabled</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/light_gray</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/dark_gray</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/green</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>


</resources>
